{
    "$schema": "https://raw.githubusercontent.com/lit/lit/main/packages/localize-tools/config.schema.json",
    "sourceLocale": "en",
    "targetLocales": [
        "en",
        "es"
    ],
    "inputFiles": [
        "src/**/*.js"
    ],
    "output": {
        "mode": "transform",
        "outputDir": "./dist/localization"
    },
    "interchange": {
        "format": "xliff",
        "xliffDir": "./localization/"
    }
}